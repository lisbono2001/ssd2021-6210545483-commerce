<h1>Welcome to Urn Shopping!</h1>

<h3>Our shops have <%= Product.public_count %> products for sale! </h3>

<p id="notice"><%= notice %></p>

<div class="flex-container">
  <% @products.each do |product| %>
    <div class="card" style="width: 300px; margin:10px; display:inline-block;">
        <div class="card-body">
            <h4 class="card-title"><%= link_to product.name, product %></h4>
            <div style="height:200px">
            <% if product.image.attached? %>
                <%= link_to image_tag(product.image, style:"width:200px; height:200px") , product%>
            <% end %>
            </div>
            <p>Categories : <%= product.categories.map(&:name).join(',') %></p>
            <div class="row">
                <div class="col-md">
                    <p>Price : <%=product.price%></p>
                </div>
                <div class="col-md">
                    <p>Stock : <%=product.stock%></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <div><%= link_to 'Buy Now', new_order_path(product_id: product), class: 'btn btn-warning' %></div>
                </div>
                <div class="col-md">
                    <div><%= link_to "More Detail", product ,class:"btn btn-info" %></div>
                </div>
            </div>
        </div>
    </div>
  <% end %>
</div>

<div>
    <%= link_to 'Download CSV File ', products_path(format: :csv), class: "btn btn-outline-info"%>
</div>
