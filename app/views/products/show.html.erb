<h1><%= @product.name %></h1>

<p><%= @product.description %></p>

<p><%= @product.price %></p>

<p>left : <%= @product.stock %></p>

<p>sold : <%= @product.sold %></p>

<%= link_to "Back to Products", '/products' %>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>

  <li><%= link_to "Delete", product_path(@product),
                  method: :delete,
                  data: { confirm: "Delete product '#{@product.name}' ?" } %></li>
</ul>

<h2>Reviews</h2>
    <%= render @product.reviews %>


<h2>Add a review:</h2>
    <%= render 'reviews/form' %>