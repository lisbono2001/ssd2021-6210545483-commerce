<h1>Admin Page</h1>
<p> manage users and see all products including hiddens </p>

<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete Account', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>
<%= link_to 'New User', new_user_path %>
<hr>
<h2><%= link_to 'Click to see All Products From All Users', "/admins/allproducts" %></h2>
